<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target xsi:type="File" name="f" fileName="/logs/aviation/excel/${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${message}" />
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="f" />
    </rules>
  </nlog>

  <appSettings>
    <add key="allors.database.address" value="https://intranet.aviation.com/allors/" />
    <add key="allors.authentication.token.url" value="Authentication/Token" />
    <add key="environment" value="prod" />
  </appSettings>

</configuration>
